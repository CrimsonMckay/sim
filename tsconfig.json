{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./gen/srv",
    "rootDir": "./",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false
  },
  "include": [
    "scripts/*.ts",
    "services/*.ts",
    "srv/**/*.ts",
    "db/**/*.cds",
    "src/**/*.ts",
    "srv/*.ts"
  ],
  "exclude": ["node_modules"]
}
